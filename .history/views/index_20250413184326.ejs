<h1>Person List</h1>
<a href="/person/new">Add New Person</a>
<table border="1">
    <tr>
        <th>Name</th><th>Age</th><th>Gender</th><th>Mobile</th><th>Actions</th>
    </tr>
    < % people.forEach(person => { %>
    <tr>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.gender %></td>
        <td><%= person.mobile %></td>
        <td>
            <a href="/person/<%= person._id %>/edit">Edit</a>
            <form action="/person/<%= person._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
    <% }); %>
</table>
